[color]
	branch = auto
	diff = auto
	interactive = auto
	pager = true
	status = auto
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "branch"]
	current = cyan reverse
	local = cyan
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow reverse
	changed = green
	untracked = cyan

[push]
	# Push only current branch
	default = simple

[core]
	excludesfile = ~/.gitignore
	quotepath = false
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = nvim -u ~/.config/nvim/init.vim

[log]
	decorate = full

[gui]
	fontdiff = -family Terminus -size -12 -weight normal -slant roman -underline 0 -overstrike 0
	editor = nvim-gtk
	historybrowser = gitk

[cola]
	spellcheck = false
	boldheaders = true
	fontdiff = Terminus,9,-1,5,50,0,0,0,0,0
	tabwidth = 4
	expandtab = true
	safemode = true
	blameviewer = git gui blame
	icontheme = dark

[gpg]
	program = gpg2
